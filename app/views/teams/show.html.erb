<div class="page-header">
  <h3>Team #<%= @team.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Name</dt>
      <dd><%= @team.name %></dd>

      <dt>Photo url</dt>
      <dd><%= @team.photo_url %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/teams" class="btn btn-primary">
        Back
      </a>
      <a href="/teams/<%= @team.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_team/<%= @team.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<!-- A Team has many players -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Players
      </li>

      <% @team.players.each do |user| %>
        <li class="list-group-item">
          <a href="/users/<%= user.id %>">
            <%= user.team_id %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/users/<%= user.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/users/<%= user.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_user/<%= user.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>

      <li class="list-group-item">
        
      </li>
    </ul>
  </div>
</div>

<!-- A Team has many winning_matches -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Winning Matches
      </li>

      <% @team.winning_matches.each do |match| %>
        <li class="list-group-item">
          <a href="/matches/<%= match.id %>">
            <%= match.name %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/matches/<%= match.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/matches/<%= match.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_match/<%= match.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>

      <li class="list-group-item">
        <form action="/create_match" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>

        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="">
      </div>

      <!-- Label and input for course_id -->
      <div class="form-group">
        <label for="course_id" class="control-label">
          Course
        </label>

        <%= select_tag(:course_id, options_from_collection_for_select(Course.all, :id, :image_url), :class => "form-control") %>
      </div>

      <!-- Label and input for tee_time -->
      <div class="form-group">
        <label for="tee_time" class="control-label">
          Tee time
        </label>

        <input type="text" id="tee_time" name="tee_time" placeholder="Tee time" class="form-control" value="">
      </div>

      <!-- Label and input for winning_team_id -->
      <div class="form-group">
        <label for="winning_team_id" class="control-label">
          Winning team
        </label>

        <%= select_tag(:winning_team_id, options_from_collection_for_select(Team.all, :id, :name), :class => "form-control") %>
      </div>

      <!-- Label and input for home_team_id -->
      <div class="form-group">
        <label for="home_team_id" class="control-label">
          Home team
        </label>

        <%= select_tag(:home_team_id, options_from_collection_for_select(Team.all, :id, :name), :class => "form-control") %>
      </div>

      <!-- Label and input for away_team_id -->
      <div class="form-group">
        <label for="away_team_id" class="control-label">
          Away team
        </label>

        <%= select_tag(:away_team_id, options_from_collection_for_select(Team.all, :id, :name), :class => "form-control") %>
      </div>

      <!-- Label and input for booth_player_1_id -->
      <div class="form-group">
        <label for="booth_player_1_id" class="control-label">
          Booth player 1
        </label>

        <%= select_tag(:booth_player_1_id, options_from_collection_for_select(User.all, :id, :team_id), :class => "form-control") %>
      </div>

      <!-- Label and input for booth_player_2_id -->
      <div class="form-group">
        <label for="booth_player_2_id" class="control-label">
          Booth player 2
        </label>

        <%= select_tag(:booth_player_2_id, options_from_collection_for_select(User.all, :id, :team_id), :class => "form-control") %>
      </div>

      <!-- Label and input for kellogg_player_1_id -->
      <div class="form-group">
        <label for="kellogg_player_1_id" class="control-label">
          Kellogg player 1
        </label>

        <%= select_tag(:kellogg_player_1_id, options_from_collection_for_select(User.all, :id, :team_id), :class => "form-control") %>
      </div>

      <!-- Label and input for kellogg_player_2_id -->
      <div class="form-group">
        <label for="kellogg_player_2_id" class="control-label">
          Kellogg player 2
        </label>

        <%= select_tag(:kellogg_player_2_id, options_from_collection_for_select(User.all, :id, :team_id), :class => "form-control") %>
      </div>

      <button class="btn btn-block btn-success">
        Create Match
      </button>
    </form>
      </li>
    </ul>
  </div>
</div>

