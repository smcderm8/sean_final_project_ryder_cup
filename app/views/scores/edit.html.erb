<!-- Validation failure messages -->
<% if @score.errors.any? %>
  <% @score.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Score #<%= @score.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_score/<%= @score.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for score -->
      <div class="form-group">
        <label for="score" class="control-label">
          Score
        </label>

        <input type="text" id="score" name="score" placeholder="Score" class="form-control" value="<%= @score.score %>">
      </div>

      <!-- Label and input for match_id -->
      <div class="form-group">
        <label for="match_id" class="control-label">
          Match
        </label>

        <%= select_tag(:match_id, options_from_collection_for_select(Match.all, :id, :name, @score.match_id), :class => "form-control") %>
      </div>

      <!-- Label and input for player_id -->
      <div class="form-group">
        <label for="player_id" class="control-label">
          Player
        </label>

        <%= select_tag(:player_id, options_from_collection_for_select(User.all, :id, :team_id, @score.player_id), :class => "form-control") %>
      </div>

      <!-- Label and input for hole_id -->
      <div class="form-group">
        <label for="hole_id" class="control-label">
          Hole
        </label>

        <%= select_tag(:hole_id, options_from_collection_for_select(Hole.all, :id, :course_id, @score.hole_id), :class => "form-control") %>
      </div>

      <button class="btn btn-warning">
        Update Score
      </button>
      or
      <a href="/scores/<%= @score.id %>">Cancel</a>
    </form>
  </div>
</div>
