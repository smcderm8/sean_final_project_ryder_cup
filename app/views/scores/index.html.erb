<div class="page-header">
  <h1>
    Scores
    <a href="/scores/new" class="btn btn-lg btn-success">New Score</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "scores_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
  <%= f.label :score, "Score" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :score_gteq, :class => "form-control", :placeholder => "Score greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :score_lteq, :class => "form-control", :placeholder => "Score less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
      <%= f.label :match_name_cont, "Match name contains" %>
      <%= f.text_field :match_name_cont, :class => "form-control", :placeholder => "Match name contains" %>
    </div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/scores" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#scores_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Score</th>
        <th>Match</th>
        <th>Player</th>
        <th>Hole</th>
        <th>Actions</th>
      </tr>

      <% @scores.each do |score| %>
      <tr>
        <td><%= score.score %></td>
        <td>
          <% if score.match.present? %>
            <a href="/matches/<%= score.match.id %>">
              <%= score.match.name %>
            </a>
          <% end %>
        </td>
        <td>
          <% if score.player.present? %>
            <a href="/users/<%= score.player.id %>">
              <%= score.player.team_id %>
            </a>
          <% end %>
        </td>
        <td>
          <% if score.hole.present? %>
            <a href="/holes/<%= score.hole.id %>">
              <%= score.hole.course_id %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/scores/<%= score.id %>" class="btn btn-primary">Show</a>
          <a href="/scores/<%= score.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_score/<%= score.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @scores, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
