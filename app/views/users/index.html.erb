<div class="page-header">
  <h1>
    Users
    <a href="/users/new" class="btn btn-lg btn-success">New User</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Team</th>
        <th>Name</th>
        <th>Handicap index</th>
        <th>Phone number</th>
        <th>Photo url</th>
        <th>Email</th>
        <th>Password</th>
        <th>Actions</th>
      </tr>

      <% @users.each do |user| %>
      <tr>
        <td>
          <% if user.team.present? %>
            <a href="/teams/<%= user.team.id %>">
              <%= user.team.name %>
            </a>
          <% end %>
        </td>
        <td><%= user.name %></td>
        <td><%= user.handicap_index %></td>
        <td><%= user.phone_number %></td>
        <td><%= user.photo_url %></td>
        <td><%= user.email %></td>
        <td><%= user.password %></td>
        <td>
          <a href="/users/<%= user.id %>" class="btn btn-primary">Show</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @users, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
