<div class="page-header">
  <h3>Hole #<%= @hole.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Course</dt>
      <dd>
        <% if @hole.course.present? %>
          <a href="/courses/<%= @hole.course_id %>">
            <%= @hole.course.image_url %>
          </a>
        <% end %>
      </dd>

      <dt>Hole number</dt>
      <dd><%= @hole.hole_number %></dd>

      <dt>Par</dt>
      <dd><%= @hole.par %></dd>

      <dt>Yardage</dt>
      <dd><%= @hole.yardage %></dd>

      <dt>Handicap</dt>
      <dd><%= @hole.handicap %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/holes" class="btn btn-primary">
        Back
      </a>
      <a href="/holes/<%= @hole.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_hole/<%= @hole.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<!-- A Hole has many scores -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Scores
      </li>

      <% @hole.scores.each do |score| %>
        <li class="list-group-item">
          <a href="/scores/<%= score.id %>">
            <%= score.score %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/scores/<%= score.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/scores/<%= score.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_score/<%= score.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>

      <li class="list-group-item">
        <form action="/create_score" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for score -->
      <div class="form-group">
        <label for="score" class="control-label">
          Score
        </label>

        <input type="text" id="score" name="score" placeholder="Score" class="form-control" value="">
      </div>

      <!-- Label and input for match_id -->
      <div class="form-group">
        <label for="match_id" class="control-label">
          Match
        </label>

        <%= select_tag(:match_id, options_from_collection_for_select(Match.all, :id, :name), :class => "form-control") %>
      </div>

      <!-- Label and input for player_id -->
      <div class="form-group">
        <label for="player_id" class="control-label">
          Player
        </label>

        <%= select_tag(:player_id, options_from_collection_for_select(User.all, :id, :team_id), :class => "form-control") %>
      </div>

      <!-- Label and input for hole_id -->
      <input type="hidden" name="hole_id" value="<%= @hole.id %>">

      <button class="btn btn-block btn-success">
        Create Score
      </button>
    </form>
      </li>
    </ul>
  </div>
</div>
