<div class="page-header">
  <h1>
    Matches
    <a href="/matches/new" class="btn btn-lg btn-success">New Match</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "matches_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
    <%= f.label :name_cont, "Name contains" %>
    <%= f.text_field :name_cont, :class => "form-control", :placeholder => "Name contains" %>
  </div>

<div class="form-group">
          <%= f.label :tee_time, "Tee time" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='tee_timegteqPicker'>
                  <%= f.text_field :tee_time_gteq, :class => "form-control", :placeholder => "Tee time greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='tee_timelteqPicker'>
                  <%= f.text_field :tee_time_lteq, :class => "form-control", :placeholder => "Tee time less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#tee_timegteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#tee_timelteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#tee_timegteqPicker').on("dp.change", function (e) {
                  $('#tee_timelteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#tee_timelteqPicker').on("dp.change", function (e) {
                  $('#tee_timegteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
      <%= f.label :winning_team_name_cont, "Team name contains" %>
      <%= f.text_field :winning_team_name_cont, :class => "form-control", :placeholder => "Team name contains" %>
    </div>

<div class="form-group">
      <%= f.label :home_team_name_cont, "Team name contains" %>
      <%= f.text_field :home_team_name_cont, :class => "form-control", :placeholder => "Team name contains" %>
    </div>

<div class="form-group">
      <%= f.label :away_team_name_cont, "Team name contains" %>
      <%= f.text_field :away_team_name_cont, :class => "form-control", :placeholder => "Team name contains" %>
    </div>

<div class="form-group">
      <%= f.label :course_image_url_cont, "Course image_url contains" %>
      <%= f.text_field :course_image_url_cont, :class => "form-control", :placeholder => "Course image_url contains" %>
    </div>

<div class="form-group">
  <%= f.label :score, "Score Score" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :scores_score_gteq, :class => "form-control", :placeholder => "Score Score greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :scores_score_lteq, :class => "form-control", :placeholder => "Score Score less than or equal to" %>
    </div>
  </div>
</div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/matches" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#matches_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Course</th>
        <th>Tee time</th>
        <th>Winning team</th>
        <th>Home team</th>
        <th>Away team</th>
        <th>Booth player 1</th>
        <th>Booth player 2</th>
        <th>Kellogg player 1</th>
        <th>Kellogg player 2</th>
        <th>Actions</th>
      </tr>

      <% @matches.each do |match| %>
      <tr>
        <td><%= match.name %></td>
        <td>
          <% if match.course.present? %>
            <a href="/courses/<%= match.course.id %>">
              <%= match.course.image_url %>
            </a>
          <% end %>
        </td>
        <td><%= match.tee_time %></td>
        <td>
          <% if match.winning_team.present? %>
            <a href="/teams/<%= match.winning_team.id %>">
              <%= match.winning_team.name %>
            </a>
          <% end %>
        </td>
        <td>
          <% if match.home_team.present? %>
            <a href="/teams/<%= match.home_team.id %>">
              <%= match.home_team.name %>
            </a>
          <% end %>
        </td>
        <td>
          <% if match.away_team.present? %>
            <a href="/teams/<%= match.away_team.id %>">
              <%= match.away_team.name %>
            </a>
          <% end %>
        </td>
        <td>
          <% if match.booth_player_1.present? %>
            <a href="/users/<%= match.booth_player_1.id %>">
              <%= match.booth_player_1.team_id %>
            </a>
          <% end %>
        </td>
        <td>
          <% if match.booth_player_2.present? %>
            <a href="/users/<%= match.booth_player_2.id %>">
              <%= match.booth_player_2.team_id %>
            </a>
          <% end %>
        </td>
        <td>
          <% if match.kellogg_player_1.present? %>
            <a href="/users/<%= match.kellogg_player_1.id %>">
              <%= match.kellogg_player_1.team_id %>
            </a>
          <% end %>
        </td>
        <td>
          <% if match.kellogg_player_2.present? %>
            <a href="/users/<%= match.kellogg_player_2.id %>">
              <%= match.kellogg_player_2.team_id %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/matches/<%= match.id %>" class="btn btn-primary">Show</a>
          <a href="/matches/<%= match.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_match/<%= match.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @matches, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
