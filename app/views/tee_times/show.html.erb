<div class="page-header">
  <h3>Tee Time #<%= @tee_time.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Time</dt>
      <dd><%= @tee_time.time %></dd>

      <dt>Player</dt>
      <dd>
        <% if @tee_time.player.present? %>
          <a href="/players/<%= @tee_time.player_id %>">
            <%= @tee_time.player.team_id %>
          </a>
        <% end %>
      </dd>

      <dt>Match</dt>
      <dd>
        <% if @tee_time.match.present? %>
          <a href="/matches/<%= @tee_time.match_id %>">
            <%= @tee_time.match.name %>
          </a>
        <% end %>
      </dd>

      <dt>Team</dt>
      <dd>
        <% if @tee_time.team.present? %>
          <a href="/teams/<%= @tee_time.team_id %>">
            <%= @tee_time.team.name %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/tee_times" class="btn btn-primary">
        Back
      </a>
      <a href="/tee_times/<%= @tee_time.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_tee_time/<%= @tee_time.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
