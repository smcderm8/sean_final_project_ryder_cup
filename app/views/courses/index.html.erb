<div class="page-header">
  <h1>
    Courses
    <a href="/courses/new" class="btn btn-lg btn-success">New Course</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "courses_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
    <%= f.label :image_url_cont, "Image url contains" %>
    <%= f.text_field :image_url_cont, :class => "form-control", :placeholder => "Image url contains" %>
  </div>

<div class="form-group">
    <%= f.label :slope_cont, "Slope contains" %>
    <%= f.text_field :slope_cont, :class => "form-control", :placeholder => "Slope contains" %>
  </div>

<div class="form-group">
    <%= f.label :rating_cont, "Rating contains" %>
    <%= f.text_field :rating_cont, :class => "form-control", :placeholder => "Rating contains" %>
  </div>

<div class="form-group">
    <%= f.label :par_cont, "Par contains" %>
    <%= f.text_field :par_cont, :class => "form-control", :placeholder => "Par contains" %>
  </div>

<div class="form-group">
    <%= f.label :address_cont, "Address contains" %>
    <%= f.text_field :address_cont, :class => "form-control", :placeholder => "Address contains" %>
  </div>

<div class="form-group">
    <%= f.label :name_cont, "Name contains" %>
    <%= f.text_field :name_cont, :class => "form-control", :placeholder => "Name contains" %>
  </div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
      <%= f.label :matches_name_cont, "Match name contains" %>
      <%= f.text_field :matches_name_cont, :class => "form-control", :placeholder => "Match name contains" %>
    </div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/courses" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#courses_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Image url</th>
        <th>Name</th>
        <th>Address</th>
        <th>Par</th>
        <th>Rating</th>
        <th>Slope</th>
        <th>Actions</th>
      </tr>

      <% @courses.each do |course| %>
      <tr>
        <td><%= course.image_url %></td>
        <td><%= course.name %></td>
        <td><%= course.address %></td>
        <td><%= course.par %></td>
        <td><%= course.rating %></td>
        <td><%= course.slope %></td>
        <td>
          <a href="/courses/<%= course.id %>" class="btn btn-primary">Show</a>
          <a href="/courses/<%= course.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_course/<%= course.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @courses, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
