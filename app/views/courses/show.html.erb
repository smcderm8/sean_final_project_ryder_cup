<div class="page-header">
  <h3>Course #<%= @course.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Image url</dt>
      <dd><%= @course.image_url %></dd>

      <dt>Name</dt>
      <dd><%= @course.name %></dd>

      <dt>Address</dt>
      <dd>
        <div>
          <div id="location_map" style="height: 480px;"></div>
        </div>
      </dd>

      <dt>Par</dt>
      <dd><%= @course.par %></dd>

      <dt>Rating</dt>
      <dd><%= @course.rating %></dd>

      <dt>Slope</dt>
      <dd><%= @course.slope %></dd>

      <dt>Yardage</dt>
      <dd><%= @course.yardage %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/courses" class="btn btn-primary">
        Back
      </a>
      <a href="/courses/<%= @course.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_course/<%= @course.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<!-- A Course has many matches -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Matches
      </li>

      <% @course.matches.each do |match| %>
        <li class="list-group-item">
          <a href="/matches/<%= match.id %>">
            <%= match.name %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/matches/<%= match.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/matches/<%= match.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_match/<%= match.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>

      <li class="list-group-item">
        <form action="/create_match" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>

        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="">
      </div>

      <!-- Label and input for course_id -->
      <input type="hidden" name="course_id" value="<%= @course.id %>">

      <!-- Label and input for tee_time -->
      <div class="form-group">
        <label for="tee_time" class="control-label">
          Tee time
        </label>

        <input type="text" id="tee_time" name="tee_time" placeholder="Tee time" class="form-control" value="">
      </div>

      <!-- Label and input for winning_team_id -->
      <div class="form-group">
        <label for="winning_team_id" class="control-label">
          Winning team
        </label>

        <%= select_tag(:winning_team_id, options_from_collection_for_select(Team.all, :id, :name), :class => "form-control") %>
      </div>

      <!-- Label and input for home_team_id -->
      <div class="form-group">
        <label for="home_team_id" class="control-label">
          Home team
        </label>

        <%= select_tag(:home_team_id, options_from_collection_for_select(Team.all, :id, :name), :class => "form-control") %>
      </div>

      <!-- Label and input for away_team_id -->
      <div class="form-group">
        <label for="away_team_id" class="control-label">
          Away team
        </label>

        <%= select_tag(:away_team_id, options_from_collection_for_select(Team.all, :id, :name), :class => "form-control") %>
      </div>

      <!-- Label and input for booth_player_1_id -->
      <div class="form-group">
        <label for="booth_player_1_id" class="control-label">
          Booth player 1
        </label>

        <%= select_tag(:booth_player_1_id, options_from_collection_for_select(User.all, :id, :team_id), :class => "form-control") %>
      </div>

      <!-- Label and input for booth_player_2_id -->
      <div class="form-group">
        <label for="booth_player_2_id" class="control-label">
          Booth player 2
        </label>

        <%= select_tag(:booth_player_2_id, options_from_collection_for_select(User.all, :id, :team_id), :class => "form-control") %>
      </div>

      <!-- Label and input for kellogg_player_1_id -->
      <div class="form-group">
        <label for="kellogg_player_1_id" class="control-label">
          Kellogg player 1
        </label>

        <%= select_tag(:kellogg_player_1_id, options_from_collection_for_select(User.all, :id, :team_id), :class => "form-control") %>
      </div>

      <!-- Label and input for kellogg_player_2_id -->
      <div class="form-group">
        <label for="kellogg_player_2_id" class="control-label">
          Kellogg player 2
        </label>

        <%= select_tag(:kellogg_player_2_id, options_from_collection_for_select(User.all, :id, :team_id), :class => "form-control") %>
      </div>

      <button class="btn btn-block btn-success">
        Create Match
      </button>
    </form>
      </li>
    </ul>
  </div>
</div>

<!-- A Course has many holes -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Holes
      </li>

      <% @course.holes.each do |hole| %>
        <li class="list-group-item">
          <a href="/holes/<%= hole.id %>">
            <%= hole.course_id %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/holes/<%= hole.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/holes/<%= hole.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_hole/<%= hole.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>

      <li class="list-group-item">
        <form action="/create_hole" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for course_id -->
      <input type="hidden" name="course_id" value="<%= @course.id %>">

      <!-- Label and input for hole_number -->
      <div class="form-group">
        <label for="hole_number" class="control-label">
          Hole number
        </label>

        <input type="text" id="hole_number" name="hole_number" placeholder="Hole number" class="form-control" value="">
      </div>

      <!-- Label and input for par -->
      <div class="form-group">
        <label for="par" class="control-label">
          Par
        </label>

        <input type="text" id="par" name="par" placeholder="Par" class="form-control" value="">
      </div>

      <!-- Label and input for yardage -->
      <div class="form-group">
        <label for="yardage" class="control-label">
          Yardage
        </label>

        <input type="text" id="yardage" name="yardage" placeholder="Yardage" class="form-control" value="">
      </div>

      <!-- Label and input for handicap -->
      <div class="form-group">
        <label for="handicap" class="control-label">
          Handicap
        </label>

        <input type="text" id="handicap" name="handicap" placeholder="Handicap" class="form-control" value="">
      </div>

      <button class="btn btn-block btn-success">
        Create Hole
      </button>
    </form>
      </li>
    </ul>
  </div>
</div>


<script src="//maps.google.com/maps/api/js?v=3.24&key=AIzaSyCOTPWiuvyyo6sKoIBzKA4-1ol-vTOIOlM"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script>
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'location_map'}}, function(){
    markers = handler.addMarkers([
      {
        "lat": <%= @course.address_latitude %>,
        "lng": <%= @course.address_longitude %>,
        "infowindow": "<h5><%= @course.created_at %></h5><small><%= @course.address_formatted_address %></small>"
      }
    ]);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });
</script>